<!DOCTYPE html>

<!--[if IE 8]> <html lang="en" class="ie8 no-js"> <![endif]-->
<!--[if IE 9]> <html lang="en" class="ie9 no-js"> <![endif]-->
<!--[if !IE]><!-->
<html lang="en" class="no-js">
<!--<![endif]-->
<!-- BEGIN HEAD -->
<head>
    <meta charset="utf-8" />
    <title>天域电梯管家服务后台</title>
    <meta name="renderer" content="webkit|ie-comp|ie-stand">
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge ,Chrome=1">
    <meta content="" name="description" />
    <meta content="" name="author" />
    <meta name="MobileOptimized" content="320">

    <!-- BEGIN GLOBAL MANDATORY STYLES -->
    @Styles.Render("~/global/css")
    <!-- END GLOBAL MANDATORY STYLES -->
    <!-- BEGIN PAGE LEVEL PLUGIN STYLES -->
    @Styles.Render("~/plugin/css")
    <!-- END PAGE LEVEL PLUGIN STYLES -->
    <!-- BEGIN THEME STYLES -->
    @Styles.Render("~/theme/css")
    <!-- END THEME STYLES -->
    <link rel="shortcut icon" href="../../../../favicon.ico" />
    <link href="~/Resource/bootstrap/plugins/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Resource/bootstrap/plugins/jquery-1.10.2.min.js"></script>
    <script src="~/Resource/bootstrap/plugins/bootstrap/js/bootstrap.js"></script>
</head>
<!-- END HEAD -->
<!-- BEGIN BODY -->
<body class="page-header-fixed">
    <!-- BEGIN HEADER -->
    @Html.Action("Top", "Main")
    <!-- END HEADER -->
    <div class="clearfix">
    </div>
    <!-- BEGIN CONTAINER -->
    <div class="page-container">
        <!-- BEGIN SIDEBAR -->
        @Html.Action("Left", "Main")
        <!-- END SIDEBAR -->
        <!-- BEGIN CONTENT -->
        <div class="page-content-wrapper top_MWidth">
            <div class="page-content change_contentcolor">
                @RenderBody()
            </div>
        </div>
        <!-- END CONTENT -->
    </div>
    <!-- END CONTAINER -->
    <!-- BEGIN FOOTER -->
    <div class="footer">
        <div class="footer-inner">
            2016 &copy; tianyutiye technology.
        </div>
        <div class="footer-tools">
            <span class="go-top">
                <i class="fa fa-angle-up"></i>
            </span>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    <!-- IMPORTANT! Load jquery-ui-1.10.3.custom.min.js before bootstrap.min.js to fix bootstrap tooltip conflict with jquery ui tooltip -->
    @Scripts.Render("~/bundles/bootstrap/core")
    <!-- END CORE PLUGINS -->
    <!-- BEGIN PAGE LEVEL PLUGINS -->
    @Scripts.Render("~/bundles/bootstrap/plugin")
    <!-- IMPORTANT! fullcalendar depends on jquery-ui-1.10.3.custom.min.js for drag & drop support -->
    <!-- END PAGE LEVEL PLUGINS -->
    <!-- BEGIN PAGE LEVEL SCRIPTS -->
    @Scripts.Render("~/bundles/bootstrap/custom")

    <script src="~/resource/bootstrap/plugins/excanvas.min.js"></script>
    <script src="~/resource/bootstrap/plugins/html5shiv.min.js" type="text/javascript"></script>
    <script src="~/resource/bootstrap/plugins/respond.js"></script>
    @*<script src="~/Resource/scripts/Common.js"></script>
    <script src="~/Resource/scripts/jquery.color.js"></script>*@
    <script src="~/Resource/bootstrap/plugins/bootstrap-hover-dropdown/twitter-bootstrap-hover-dropdown.min.js"></script>

    <!-- END PAGE LEVEL SCRIPTS -->
    @RenderSection("scripts", required: false)

    <script>
        jQuery(document).ready(function () {
            if (jQuery().datepicker) {
                $('.date-picker').datepicker({
                    rtl: App.isRTL(),
                    autoclose: true
                });

            }

            App.init(); // initlayout and core plugins
        });

        function Block(OC) {

            var w = $(OC).width();
            var h = $(OC).height();
            var lw = (w / 2) - 20;
            var lh = (h / 2) - 10;

            BlockHtml = $('<div id="block" class="po-a z1" style="width:' + w + 'px;height:' + h + 'px;background:url(/Resource/bootstrap/img/bg-opacity.png);"><img src="/Resource/bootstrap/img/ajax-loading.gif" style="margin-left:' + lw + 'px;margin-top:' + lh + 'px;"></div>');
            $(OC).prepend(BlockHtml)

        }

        function UnBlock() {
            $("#block").remove();
        }
    </script>
    <!-- END JAVASCRIPTS -->
</body>
<!-- END BODY -->
</html>
